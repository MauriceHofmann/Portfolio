<Window x:Class="MinMaxAvg.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinMaxAvg"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Viewbox>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Name="lblAufforderung" Content="Bitte klicken, um die Umsatzdaten auszuwerten."/> 
            <Button Grid.Row="1" Name="btnAuswerten" Click="BtnAuswerten_Click">Auswerten</Button>
            <Label Grid.Row="2" Name="lblAusgabe" Content="Durchschnitt: 56843,27 € - Max: 39212,34 € - Min: 7450,47 €"/> 
        </Grid>
    </Viewbox>
</Window>
